{
    "name": "hyperf/kafka",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "kafka hyperf",
    "autoload": {
        "psr-4": {
            "Hyperf\\Kafka\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\Kafka\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.2",
        "hyperf/pool": "~2.0.0",
        "hyperf/process": "~2.0.0",
        "hyperf/utils": "~2.0.0",
        "longlang/phpkafka": "^1.0",
        "psr/container": "^1.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "swoole/ide-helper": "dev-master"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Hyperf\\Kafka\\ConfigProvider"
        }
    }
}
